{
  "chromadb_path": "../../chromadb_data",
  "collection": {
    "name": "wikipedia-technology",
    "description": "Curated technology articles from a local Wikipedia ZIM archive for quick research responses.",
    "json_file": "../../data/wikipedia/technology-articles.json",
    "chunk_size": 1800,
    "force_recreate": true,
    "skip_ai_validation": true
  },
  "provider": {
    "provider_type": "lmstudio",
    "base_url": "http://localhost:1234",
    "embedding": {
      "model": "nomic-embed-text-v1.5"
    },
    "llm": {
      "model": "Meta-Llama-3-8B-Instruct-Q4_K_M"
    },
    "rate_limit": {
      "requests_per_minute": 90,
      "concurrency": 2
    }
  }
}
